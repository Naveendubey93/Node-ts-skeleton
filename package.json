{
  "name": "node-typescript-boilerplate",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node build/src/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "prebuild": "mkdir -p build/src/components/User && cp src/components/user/user.swagger.json build/src/components/user/",
    "build": "tsc",
    "postbuild": "echo 'Build completed successfully'",
    "build1": "tsc -p . && cp package.json ./build/package.json && cp package-lock.json ./build/package-lock.json && cp .env ./build/.env",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:custom": "npm test --  tests/unit-tests/lib/crypto.spec.ts",
    "precommit": "npm run lint-fix && npm run format",
    "prepush": "npm run lint ",
    "test": "jest --no-cache --coverage --all --runInBand",
    "test:watch": "jest --watch --runInBand"
  },
  "author": "Naveen Dubey",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.11",
    "@types/swagger-ui-express": "^4.1.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "mongoose": "^8.3.5",
    "sequelize": "^6.37.3",
    "swagger-ui-express": "^5.0.0",
    "typescript": "^5.4.5",
    "winston": "^3.13.0"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "eslint",
      "prettier --list-different"
    ]
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/mongoose": "^5.11.97",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^15.2.4",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  }
}
