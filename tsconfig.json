{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*",
    "index.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
